<%= turbo_frame_tag "sandbox_stats_#{sandbox.id}" do %>
  <% if stats %>
    <div class="flex flex-wrap gap-x-3 gap-y-0.5 justify-end text-xs text-gray-500">
      <span>CPU <span class="font-mono font-medium"><%= stats[:cpu_percent] %>%</span></span>
      <span>MEM <span class="font-mono font-medium"><%= stats[:memory_mb].round(0) %></span>/<span class="font-mono"><%= stats[:memory_limit_mb].round(0) %></span> MB</span>
      <span>NET <span class="font-mono font-medium">↓<%= human_bytes(stats[:net_rx]) %></span> <span class="font-mono font-medium">↑<%= human_bytes(stats[:net_tx]) %></span></span>
      <span>DISK <span class="font-mono font-medium">↓<%= human_bytes(stats[:disk_read]) %></span> <span class="font-mono font-medium">↑<%= human_bytes(stats[:disk_write]) %></span></span>
      <span>PIDs <span class="font-mono font-medium"><%= stats[:pids] %></span></span>
    </div>
  <% end %>
<% end %>
