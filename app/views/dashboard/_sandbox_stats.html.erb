<%= turbo_frame_tag "sandbox_stats_#{sandbox.id}" do %>
  <% if stats %>
    <span class="text-xs text-gray-500">CPU <span class="font-mono font-medium"><%= stats[:cpu_percent] %>%</span></span>
    <span class="text-xs text-gray-500">MEM <span class="font-mono font-medium"><%= stats[:memory_mb].round(0) %></span>/<span class="font-mono"><%= stats[:memory_limit_mb].round(0) %></span> MB</span>
  <% end %>
<% end %>
