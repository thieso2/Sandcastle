<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold text-gray-900">My Sandcastles</h2>
      <%= link_to "View Guide", guide_path, class: "px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors inline-flex items-center gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
          <path d="M10 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM3.465 14.493a1.23 1.23 0 0 0 .41 1.412A9.957 9.957 0 0 0 10 18c2.31 0 4.438-.784 6.131-2.1.43-.333.604-.903.408-1.41a7.002 7.002 0 0 0-13.074.003Z" />
        </svg>
        View Guide
      <% end %>
    </div>

    <% if @sandboxes.any? %>
      <div class="grid gap-4">
        <% @sandboxes.each do |sandbox| %>
          <%= render "sandbox", sandbox: sandbox %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12 bg-gray-50 rounded-lg border-2 border-dashed border-gray-300">
        <p class="text-gray-500">No sandcastles yet.</p>
        <p class="text-sm text-gray-400 mt-1">Use the CLI to create one: <code class="bg-gray-100 px-2 py-0.5 rounded">sandcastle create my-dev</code></p>
      </div>
    <% end %>
  </div>
</div>
