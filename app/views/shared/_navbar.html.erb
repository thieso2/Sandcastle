      <span class="text-lg font-bold text-gray-900 group-hover:text-gray-700 transition-colors">Sandcastle</span>
    <% end %>

    <%# Navigation links %>
    <div class="flex items-center gap-1">
      <% nav_items = [
        { label: "Dashboard", path: root_path, active: controller_name == "dashboard" && !controller_path.start_with?("admin") },
        { label: "Guide", path: guide_path, active: controller_name == "pages" },
        { label: "Tailscale", path: tailscale_path, active: controller_name == "tailscale" && !controller_path.start_with?("api") },
      ] %>
      <% if policy(:user).index? %>
        <% nav_items << { label: "Admin", path: admin_dashboard_path, active: controller_path.start_with?("admin") && !request.path.start_with?("/admin/jobs") } %>
        <% nav_items << { label: "Jobs", path: "/admin/jobs", active: request.path.start_with?("/admin/jobs") } %>
      <% end %>

      <% nav_items.each do |item| %>
        <%= link_to item[:label], item[:path],
              class: "px-3 py-1.5 rounded-md text-sm font-medium transition-colors #{
                item[:active] ?
                  'bg-gray-900 text-white' :
                  'text-gray-600 hover:text-gray-900 hover:bg-gray-100'
              }" %>
      <% end %>

      <span class="mx-2 h-5 w-px bg-gray-200"></span>

      <%= link_to settings_path, class: "text-sm text-gray-500 hover:text-gray-700 transition-colors font-medium" do %>
        <%= Current.user.name %>
      <% end %>
      <%= link_to settings_path, class: "text-sm text-gray-400 hover:text-gray-600 transition-colors inline-flex items-center gap-1" do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
          <path fill-rule="evenodd" d="M7.84 1.804A1 1 0 0 1 8.82 1h2.36a1 1 0 0 1 .98.804l.331 1.652a6.993 6.993 0 0 1 1.929 1.115l1.598-.54a1 1 0 0 1 1.186.447l1.18 2.044a1 1 0 0 1-.205 1.251l-1.267 1.113a7.047 7.047 0 0 1 0 2.228l1.267 1.113a1 1 0 0 1 .206 1.25l-1.18 2.045a1 1 0 0 1-1.187.447l-1.598-.54a6.993 6.993 0 0 1-1.929 1.115l-.33 1.652a1 1 0 0 1-.98.804H8.82a1 1 0 0 1-.98-.804l-.331-1.652a6.993 6.993 0 0 1-1.929-1.115l-1.598.54a1 1 0 0 1-1.186-.447l-1.18-2.044a1 1 0 0 1 .205-1.251l1.267-1.114a7.05 7.05 0 0 1 0-2.227L1.821 7.773a1 1 0 0 1-.206-1.25l1.18-2.045a1 1 0 0 1 1.187-.447l1.598.54A6.992 6.992 0 0 1 7.51 3.456l.33-1.652ZM10 13a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" clip-rule="evenodd" />
