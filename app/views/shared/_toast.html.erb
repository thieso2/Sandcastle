<%# Toast notification for async job completions %>
<div id="<%= dom_id %>"
     data-controller="flash"
     data-flash-level-value="notice"
     data-flash-dismiss-after-value="5000"
     class="fixed bottom-4 right-4 z-50 flex items-center gap-3 py-3 px-4 pr-10 <%= level == 'error' ? 'bg-red-50 text-red-600' : 'bg-green-50 text-green-600' %> font-medium rounded-lg shadow-lg border <%= level == 'error' ? 'border-red-200' : 'border-green-200' %> max-w-md">
  <% if level == 'error' %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 flex-shrink-0">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" />
    </svg>
  <% else %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 flex-shrink-0">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
  <% end %>
  <span class="text-sm"><%= message %></span>
  <button type="button"
          data-action="click->flash#close"
          class="absolute right-2 top-1/2 -translate-y-1/2 <%= level == 'error' ? 'text-red-400 hover:text-red-600' : 'text-green-400 hover:text-green-600' %> transition-colors">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>
</div>
