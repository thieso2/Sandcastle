<div class="max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Tailscale</h1>

  <div id="tailscale-flash">
    <% if flash[:notice] %>
      <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded mb-6"><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] %>
      <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded mb-6"><%= flash[:alert] %></div>
    <% end %>
  </div>

  <%= turbo_frame_tag "tailscale-content" do %>
  <% if Current.user.tailscale_enabled? %>
    <%# ── Connected state ── %>
    <div class="bg-white border border-gray-200 rounded-lg p-6 mb-6">
      <div class="flex items-center gap-2 mb-4">
        <span class="inline-block w-2 h-2 rounded-full <%= @status&.dig(:running) ? 'bg-green-500' : 'bg-red-500' %>"></span>
        <h2 class="text-lg font-semibold text-gray-900">Sidecar Status</h2>
      </div>

      <% if @error %>
        <p class="text-red-600 text-sm"><%= @error %></p>
      <% elsif @status %>
        <div class="grid grid-cols-2 gap-4 text-sm">
          <div>
            <span class="text-gray-500">Tailscale IP</span>
            <p class="font-mono font-medium"><%= @status[:tailscale_ip] || "Connecting..." %></p>
          </div>
          <div>
            <span class="text-gray-500">Hostname</span>
            <p class="font-mono font-medium"><%= @status[:hostname] || "—" %></p>
          </div>
          <div>
            <span class="text-gray-500">Tailnet</span>
            <p class="font-mono font-medium"><%= @status[:tailnet] || "—" %></p>
          </div>
          <div>
            <span class="text-gray-500">Network</span>
            <p class="font-mono font-medium"><%= @status[:network] %></p>
          </div>
          <div>
            <span class="text-gray-500">Container</span>
            <p class="font-mono font-medium"><%= @status[:container_id] %></p>
          </div>
          <div>
            <span class="text-gray-500">Connected Sandboxes</span>
            <p class="font-mono font-medium"><%= @status[:connected_sandboxes] %></p>
          </div>
          <% if @status[:tags].present? %>
            <div>
              <span class="text-gray-500">Tags</span>
              <p class="font-mono font-medium"><%= @status[:tags].map { |t| t.delete_prefix("tag:") }.join(", ") %></p>
            </div>
          <% end %>
        </div>

        <% unless @status[:running] %>
          <div class="mt-4 bg-red-50 border border-red-200 rounded-lg p-4">
            <h3 class="text-sm font-bold text-red-800 mb-1">Sidecar container is not running</h3>
            <% if @status[:error_reason].present? %>
              <p class="text-sm text-red-700 mb-2">Error: <code class="bg-red-100 px-1 rounded"><%= @status[:error_reason] %></code></p>
            <% end %>
            <% if @status[:exit_code] && @status[:exit_code] != 0 %>
              <p class="text-sm text-red-700 mb-2">Exit code: <code class="bg-red-100 px-1 rounded"><%= @status[:exit_code] %></code></p>
            <% end %>
            <% if @status[:logs].present? %>
              <details class="mt-2" open>
                <summary class="text-xs font-medium text-red-700 cursor-pointer">Container logs</summary>
                <pre class="mt-1 text-xs text-red-800 bg-red-100 rounded p-3 overflow-x-auto whitespace-pre-wrap"><%= @status[:logs] %></pre>
              </details>
            <% end %>
            <p class="text-xs text-red-600 mt-3">Try disabling and re-enabling Tailscale to restart the sidecar.</p>
          </div>
        <% end %>
      <% end %>
    </div>

    <%= render "tailscale/route_approval" %>

    <div class="bg-white border border-gray-200 rounded-lg p-4 mb-6">
      <h3 class="text-sm font-medium text-gray-700 mb-2">Settings</h3>
      <%= form_with url: update_settings_tailscale_path, method: :patch, class: "flex items-center gap-3" do |f| %>
        <input type="hidden" name="auto_connect" value="0">
        <label class="flex items-center gap-2 text-sm text-gray-700 cursor-pointer">
          <input type="checkbox" name="auto_connect" value="1"
                 <%= "checked" if Current.user.tailscale_auto_connect? %>
                 class="rounded border-gray-300 text-blue-600 focus:ring-blue-500"
                 onchange="this.form.requestSubmit()">
          Auto-connect new sandboxes to Tailscale
        </label>
      <% end %>
    </div>

    <%= button_to "Disable Tailscale", disable_tailscale_path, method: :delete,
          class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 text-sm",
          data: { turbo_confirm: "This will disconnect all sandboxes from Tailscale and remove the sidecar. Continue?",
                  turbo_submits_with: "Disabling..." } %>

  <% elsif Current.user.tailscale_pending? %>
    <%= render "tailscale/pending" %>

  <% else %>
    <%# ── Setup state ── %>
    <div class="bg-white border border-gray-200 rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-2">Connect to Tailscale</h2>
      <p class="text-sm text-gray-600 mb-4">
        A per-user sidecar container will advertise sandbox IPs as subnet routes,
        making your sandboxes reachable from any device on your tailnet via SSH.
      </p>

      <%= form_with url: login_tailscale_path, method: :post, class: "space-y-4" do |f| %>
        <div>
          <input type="hidden" name="tailscale_tag" value="">
          <label class="flex items-center gap-2 text-sm text-gray-700 cursor-pointer">
            <input type="checkbox" name="tailscale_tag" value="tag:sandcastle"
                   id="tailscale-tag-checkbox" checked
                   onchange="document.getElementById('tag-warning').classList.toggle('hidden', !this.checked); document.getElementById('no-tag-warning').classList.toggle('hidden', this.checked)"
                   class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
            Advertise ACL tag <code class="bg-gray-100 px-1.5 py-0.5 rounded text-xs font-mono">tag:sandcastle</code>
          </label>
        </div>

        <div id="tag-warning" class="bg-amber-50 border border-amber-200 rounded-lg p-4 text-sm text-amber-800">
          <p class="font-medium mb-2">Before connecting, add this tag to your Tailscale ACL policy:</p>
          <ol class="list-decimal list-inside space-y-1 text-xs mb-3">
            <li>Open your <a href="https://login.tailscale.com/admin/acls/file" target="_blank" rel="noopener" class="underline font-medium hover:text-amber-950">ACL policy</a></li>
            <li>Add <code class="bg-amber-100 px-1 rounded">"tag:sandcastle"</code> to <code class="bg-amber-100 px-1 rounded">tagOwners</code></li>
            <li>Add <code class="bg-amber-100 px-1 rounded">"tag:sandcastle"</code> to <code class="bg-amber-100 px-1 rounded">autoApprovers.routes</code> for automatic subnet approval</li>
          </ol>
          <details class="group">
            <summary class="text-xs font-medium text-amber-900 cursor-pointer hover:text-amber-950">Show example ACL snippet</summary>
            <pre class="bg-amber-100 text-amber-900 text-xs rounded p-3 overflow-x-auto mt-2"><code>"tagOwners": {
  "tag:sandcastle": ["autogroup:admin"]
},
"autoApprovers": {
  "routes": {
    "10.0.0.0/8":     ["tag:sandcastle"],
    "172.16.0.0/12":  ["tag:sandcastle"],
    "192.168.0.0/16": ["tag:sandcastle"]
  }
}</code></pre>
          </details>
          <p class="text-xs text-amber-700 mt-2">
            If the tag doesn't exist in your ACL, the sidecar will fail to authenticate.
            You can always disable Tailscale and reconnect without it.
          </p>
        </div>

        <div id="no-tag-warning" class="bg-amber-50 border border-amber-200 rounded-lg p-4 text-sm text-amber-800 hidden">
          <p class="mb-2">
            Without a tag, subnet routes must be <strong>approved manually</strong> before traffic can flow.
          </p>
          <ol class="list-decimal list-inside space-y-1 text-xs">
            <li>Open the <a href="https://login.tailscale.com/admin/machines" target="_blank" rel="noopener" class="underline font-medium hover:text-amber-950">Tailscale admin console</a></li>
            <li>Find the <code class="bg-amber-100 px-1 rounded">sc-<%= Current.user.name %></code> machine</li>
            <li>Click <strong>Edit route settings</strong> and approve the advertised subnet</li>
          </ol>
        </div>

        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-sm"
                data-turbo-submits-with="Starting sidecar...">
          Connect to Tailscale
        </button>
      <% end %>
    </div>
  <% end %>
  <% end %>
</div>
