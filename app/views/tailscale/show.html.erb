<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Tailscale</h1>
    <%= link_to "Back to Dashboard", root_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
  </div>

  <% if flash[:notice] %>
    <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded mb-6"><%= flash[:notice] %></div>
  <% end %>
  <% if flash[:alert] %>
    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded mb-6"><%= flash[:alert] %></div>
  <% end %>

  <% if Current.user.tailscale_configured? %>
    <%# ── Configured state ── %>
    <div class="bg-white border border-gray-200 rounded-lg p-6 mb-6">
      <div class="flex items-center gap-2 mb-4">
        <span class="inline-block w-2 h-2 rounded-full bg-green-500"></span>
        <h2 class="text-lg font-semibold text-gray-900">Auth Key Configured</h2>
      </div>

      <p class="text-sm text-gray-600 mb-4">
        Sandboxes created with <code class="bg-gray-100 px-1 rounded">--tailscale</code> will automatically join your tailnet.
        Each sandbox becomes its own Tailscale node with SSH access enabled.
      </p>
    </div>

    <div class="bg-white border border-gray-200 rounded-lg p-4 mb-6">
      <h3 class="text-sm font-medium text-gray-700 mb-2">Settings</h3>
      <%= form_with url: update_settings_tailscale_path, method: :patch, class: "flex items-center gap-3" do |f| %>
        <input type="hidden" name="auto_connect" value="0">
        <label class="flex items-center gap-2 text-sm text-gray-700 cursor-pointer">
          <input type="checkbox" name="auto_connect" value="1"
                 <%= "checked" if Current.user.tailscale_auto_connect? %>
                 class="rounded border-gray-300 text-blue-600 focus:ring-blue-500"
                 onchange="this.form.requestSubmit()">
          Auto-connect new sandboxes to Tailscale
        </label>
      <% end %>
    </div>

    <details class="mb-6">
      <summary class="text-sm text-gray-500 cursor-pointer hover:text-gray-700">Update auth key</summary>
      <div class="mt-3">
        <%= form_with url: tailscale_path, method: :patch, class: "space-y-4" do |f| %>
          <div>
            <input type="password" name="auth_key" required placeholder="tskey-auth-..."
                   class="w-full border border-gray-300 rounded px-3 py-2 text-sm font-mono focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
          </div>
          <button type="submit" class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700 text-sm">
            Update Key
          </button>
        <% end %>
      </div>
    </details>

    <%= button_to "Remove Auth Key", tailscale_path, method: :delete,
          class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 text-sm",
          data: { turbo_confirm: "This will remove your stored auth key. Existing sandboxes with Tailscale will keep running, but new ones won't join your tailnet. Continue?" } %>

  <% else %>
    <%# ── Setup state ── %>
    <div class="bg-white border border-gray-200 rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-2">Set Up Tailscale</h2>
      <p class="text-sm text-gray-600 mb-4">
        Store a reusable Tailscale auth key to connect your sandboxes to your tailnet.
        When creating a sandbox with <code class="bg-gray-100 px-1 rounded">--tailscale</code>,
        Tailscale will be configured inside the sandbox automatically. Each sandbox becomes its own node on your tailnet with Tailscale SSH enabled.
      </p>

      <%= form_with url: tailscale_path, method: :patch, class: "space-y-4" do |f| %>
        <div>
          <input type="password" name="auth_key" required placeholder="tskey-auth-..."
                 class="w-full border border-gray-300 rounded px-3 py-2 text-sm font-mono focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
          <p class="text-xs text-gray-500 mt-1">
            Generate a <strong>reusable</strong> auth key at
            <code class="bg-gray-100 px-1 rounded">Tailscale Admin &rarr; Settings &rarr; Keys</code>.
            The key is stored encrypted and used each time a Tailscale-enabled sandbox is created.
          </p>
        </div>
        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-sm">
          Save Auth Key
        </button>
      <% end %>
    </div>
  <% end %>
</div>
