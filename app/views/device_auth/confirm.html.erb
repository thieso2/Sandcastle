<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Authorize Device</h1>

  <div class="my-6 p-4 bg-gray-50 rounded-lg border border-gray-200">
    <p class="text-sm text-gray-500 mb-1">Device</p>
    <p class="font-medium text-lg"><%= @device_code.client_name || "CLI" %></p>

    <p class="text-sm text-gray-500 mt-3 mb-1">Code</p>
    <p class="font-mono text-lg tracking-widest"><%= @device_code.user_code %></p>
  </div>

  <p class="text-gray-600 mb-6">
    This will create an API token for the device above, granting it access to your Sandcastle account.
  </p>

  <%= form_with url: auth_device_approve_path, method: :post, class: "flex gap-3" do |form| %>
    <%= form.hidden_field :device_code_id, value: @device_code.id %>
    <%= form.submit "Approve", class: "flex-1 rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium cursor-pointer" %>
    <%= link_to "Deny", root_path, class: "flex-1 text-center rounded-md px-3.5 py-2.5 border border-gray-300 hover:bg-gray-50 font-medium" %>
  <% end %>
</div>
